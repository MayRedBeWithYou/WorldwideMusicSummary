@model string
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0">
    <link href="~/lib/jqueryui/themes/smoothness/jquery-ui.min.css" rel="stylesheet" type="text/css" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="style.css" />
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="src.js" type="text/javascript"></script>
    <title>Worldwide Music Summary</title>
</head>
<body>
    <div id="controlPanel">
        <div class="menu">
            <div id="menuPanel" class="menuPanel">
                <div id="welcomeRow">
                    <div class="column">
                        <img id="profilePicture"/>
                    </div>
                    <div class="column">
                        <h2 id="welcomeText">Hello...</h2>
                    </div>
                </div>
                <div id="fav"></div>
                <ul class="nav nav-tabs">
                    <li class="nav-item active"><a class="nav-link active" id="trendingTab" data-toggle="tab" href="#trending" role="tab" aria-controls="trending" aria-selected="true">Now Trending</a></li>
                    <li class="nav-item"><a class="nav-link" id="personalTab" data-toggle="tab" href="#personal" role="tab" aria-controls="personal" aria-selected="false">Personal Stats</a></li>
                </ul>
                <div class="tab-content" id="tabContent">
                    <div class="tab-pane fade in active" id="trending">
                        <button class="btn btn-default" id="refreshTrending">Refresh list</button>
                        <div id="trendingList">
                        </div>
                    </div>
                    <div class="tab-pane fade" id="personal">
                        <div class="radio">
                            <input type="radio" class="custom-control-input" id="trackRadioButton" name="personalRadioGroup" checked>
                            <label class="personalOptions" for="trackRadioButton">Your top tracks by countries</label>
                        </div>
                        <div class="radio">
                            <input type="radio" class="custom-control-input" id="artistRadioButton" name="personalRadioGroup">
                            <label class="personalOptions" for="artistRadioButton">Your top artists by countries</label>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="map"></div>
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 36.07, lng: 22.43 },
                zoom: 3,
                disableDefaultUI: true,
                zoomControl: true,
                mapTypeControl: false,
                scaleControl: true,
                streetViewControl: false,
                rotateControl: false,
                fullscreenControl: false,
                maxZoom: 6,
                minZoom: 2,
                restriction: {
                    latLngBounds: {
                        north: 85,
                        south: -85,
                        west: -180,
                        east: 180
                    }
                }
            });
        }
    </script>
    <script src=@Model async defer></script>
</body>
</html>